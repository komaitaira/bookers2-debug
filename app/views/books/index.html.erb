<div class="row">

    <% if @book.errors.any? %>
		<h3><%= pluralize(@book.errors.count, "error") %> prohibited this obj from being saved:</h3><!--エラーメッセ-->
		<ul>
			<% @book.errors.full_messages.each do |message| %>
			<li><%= message %></li>
			<% end %>
		</ul>
	<% end %>

	<div class="col-xs-3">

		<h2>User info</h2>
		<%= render 'users/profile', user: @user %>
		<!--メモ　右側の指定に注意。そこを間違えるとエラーが発生して表示されない -->

		<h2>New book</h2>
		<%= render 'books/newform', book: @book %>

	</div>

	<div class="col-xs-9">
		<h2>Books</h2>
		<!--books一覧 -->
		<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
					<th colspan="3"></th>
				</tr>
			</thead>

			<tbody>
				<% @books.each do |book| %>
					<tr>
						<td>
							<%= link_to(book.user) do %>
								<%= attachment_image_tag(book.user, :profile_image, size: '50x50', fallback: "no-image-mini.jpg") %>
							<% end %>
						</td>
						<td><%= link_to book.title, book, class: "book_#{book.id}" %></td>
						<td><%= book.body %></td>
						<span class="like">
							<% if book.favorited_by?(current_user) %>
								<td>
									<%= link_to book_favorites_path(book.id), method: :delete do %>
										<%= content_tag :span, "", class: "glyphicon glyphicon-heart" %>
										<%= book.favorites.count %>
									<% end %>
								</td>
							<% else %>
								<td>
									<%= link_to book_favorites_path(book.id), method: :post do %>
										<%= content_tag :span, "", class: "glyphicon glyphicon-heart-empty" %>
										<%= book.favorites.count %>
									<% end %>
								</td>
							<% end %>
						</span>
					</tr>
				<% end %>
			</tbody>
		</table>

		<!--books一覧 -->


	</div>
</div>