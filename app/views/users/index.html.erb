<div class="row" >
  <div class="col-xs-3">
	<h2>User info</h2>
	<%= render 'users/profile', user: @user %>　
	<!--メモ　右側の指定に注意。そこを間違えるとエラーが発生して表示されない -->
	<h2>New book</h2>
	<%= render 'books/newform', book: @book %>
  </div>

  <div class="col-xs-9" >
	<h2>Users</h2>
	<!--users一覧 -->
	<table class="table table-hover table-inverse">
		<thead>
			<tr>
				<th>image</th>
				<th>name</th>
				<th></th>
				<th></th>
				<th></th>
			</tr>
		</thead>

		<tbody>
			<% @users.each do |user| %>
			<tr>
				<td><%= attachment_image_tag(user, :profile_image, size: '50x50', fallback: "no-image-mini.jpg") %></td>
				<td><%= user.name%></td>
				<td><%= "フォロー数: #{user.followings.count}" %></td>
				<td><%= "フォロワー数: #{user.followers.count}" %></td>
				<% if current_user != user %>
					<% if user.followed_by?(current_user) %>
						<td><%=link_to "フォロー外す", user_relationships_path(user.id), method: :delete %></td>
					<% else %>
						<td><%=link_to "フォローする", user_relationships_path(user.id), method: :post %></td>
					<% end %>
				<% else %>
					<td></td>
				<% end %>
				<td><%= link_to "Show", user, class: "user_#{user.id}" %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
	<!--users一覧 -->
  </div>
</div>
